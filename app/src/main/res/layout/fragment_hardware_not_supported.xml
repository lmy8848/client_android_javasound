<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamspeak.ts3sdkclient.HardwareNotSupportedFragment">

    <TextView
        android:id="@+id/hardware_unspported_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/unsupporteddevice_title"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/cpu_support_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/cpu_hardware_unspported_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="@string/cpu_unsupporteddevice_title"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/cpu_hardware_unsupported_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/cpu_unsupporteddevice_info"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_support_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:id="@+id/audio_hardware_unspported_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="@string/audio_unsupporteddevice_title"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/audio_hardware_unsupported_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/audio_unsupporteddevice_info"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
